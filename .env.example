# ================================
# Django Configuration
# ================================
DJANGO_SETTINGS_MODULE=config.settings.local
DJANGO_SECRET_KEY=your-secret-key-here-generate-new-one
DJANGO_DEBUG=True
DJANGO_READ_DOT_ENV_FILE=True

# ================================
# Database Configuration
# ================================
# For local development (SQLite)
DATABASE_URL=sqlite:///db.sqlite3

# For production (PostgreSQL)
# DATABASE_URL=postgres://username:password@localhost:5432/database_name
# POSTGRES_DB=agent_chat_app
# POSTGRES_USER=agent_chat_app_user
# POSTGRES_PASSWORD=your-secure-password
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# CONN_MAX_AGE=60

# ================================
# Redis Configuration
# ================================
REDIS_URL=redis://localhost:6379/0

# ================================
# Celery Configuration
# ================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ================================
# Ollama Configuration
# ================================
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_DEFAULT_MODEL=gemma2:9b

# ================================
# ChromaDB Configuration
# ================================
CHROMADB_PERSIST_DIRECTORY=./chromadb
CHROMADB_COLLECTION_NAME=documents

# ================================
# Security Settings
# ================================
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ALLOWED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# ================================
# Email Configuration (optional)
# ================================
# DJANGO_EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# ================================
# Production Settings (when DJANGO_DEBUG=False)
# ================================
# DJANGO_SECURE_SSL_REDIRECT=True
# DJANGO_SECURE_HSTS_SECONDS=518400
# DJANGO_SECURE_HSTS_INCLUDE_SUBDOMAINS=True
# DJANGO_SECURE_HSTS_PRELOAD=True
# DJANGO_SECURE_CONTENT_TYPE_NOSNIFF=True
# DJANGO_ADMIN_URL=your-custom-admin-url/
# DJANGO_ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# ================================
# Logging Configuration
# ================================
DJANGO_LOG_LEVEL=INFO

# ================================
# Account Settings
# ================================
DJANGO_ACCOUNT_ALLOW_REGISTRATION=True
DJANGO_ADMIN_FORCE_ALLAUTH=False